<UserControl x:Class="Kakuro.Windows.MVVM.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kakuro.Windows.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBox Tag="Повне ім'я"
                 Style="{StaticResource TextBoxTheme}"
                 Margin="0,0,0,10"/>
        <TextBox Tag="Ім'я користувача"
                 Style="{StaticResource TextBoxTheme}"
                 Margin="0,0,0,10"/>
        <TextBox Tag="Пароль"
                 Style="{StaticResource TextBoxTheme}"
                 Margin="0,0,0,10"/>
        <TextBox Tag="Повторіть пароль"
                 Style="{StaticResource TextBoxTheme}"
                 Margin="0,0,0,10"/>
        <Button Content="Зареєструватися" 
                Style="{StaticResource ButtonTheme}"/>
    </StackPanel>
</UserControl>
