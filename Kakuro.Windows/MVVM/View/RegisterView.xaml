<UserControl x:Class="Kakuro.Windows.MVVM.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kakuro.Windows.MVVM.View" xmlns:viewmodel="clr-namespace:Kakuro.Windows.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:RegisterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBox Tag="Повне ім'я"
                 Text="{Binding DisplayName}"
                 Style="{StaticResource TextBoxTheme}"
                 Margin="0,0,0,10"/>
        
        <TextBox Tag="Ім'я користувача"
                 Text="{Binding UserName}"
                 Style="{StaticResource TextBoxTheme}"
                 Margin="0,0,0,10"/>

        <PasswordBox Tag="Пароль"
                     Style="{StaticResource PasswordBoxTheme}"
                     PasswordChanged="PasswordBox_PasswordChanged"
                     Margin="0,0,0,10"/>

        <Button Content="Зареєструватися" 
                Command="{Binding RegisterCommand}"
                Style="{StaticResource ButtonTheme}"/>
    </StackPanel>
</UserControl>
